---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Basic",
    price: "Free",
    popular: false,
    features: [
      "Create unlimited tokens on Solana Devnet",
      "Test all features",
      "Limited number of users",
      "Community support",
    ],
    button: {
      text: "Get Started",
      link: "/",
    },
  },
  {
    name: "Pro",
    price: {
      monthly: "$29",
      annual: "$24",
      discount: "15%",
      original: "$35",
    },
    popular: true,
    features: [
      "Create tokens on Solana Mainnet",
      "Revoke, mint and freeze tokens",
      "Update token metadata",
      "Create vanity addresses",
      "Advanced token management",
      "Priority support",
    ],
    button: {
      text: "Get Started",
      link: "#",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "All Pro features",
      "Support for custom tokens",
      "Advanced system integrations",
      "Dedicated account manager",
      "24/7 support",
      "Create token websites",
      "List tokens on popular crypto sites",
    ],
    button: {
      text: "Contact Us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Simple & Predictable Pricing. No Surprises.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
