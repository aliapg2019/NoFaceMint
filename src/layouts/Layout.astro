---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
// import CreateToken from "@pages/tokenForm.astro";
export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/NofaceMint-screenshot.png",
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "NoFaceMint"
  : "Create & Manage Tokens on Solana | NoFaceMint"; // Shortened title
---

<!doctype html>
<html lang="en">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z732KG1X6W"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-Z732KG1X6W");
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="NoFaceMint is a platform for creating, managing, and analyzing custom tokens on the Solana blockchain. Efficiently handle your tokens with our advanced tools."
      canonical={canonicalURL}
      twitter={{
        creator: "@yourtwitterhandle",
        site: "@yourtwitterhandle",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Create & Manage Tokens on Solana | NoFaceMint`, // Shortened title
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "NoFaceMint Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <!-- <CreateToken /> -->
    <Navbar />

    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
