---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";


export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/NofaceMint-screenshot.png",
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "NoFaceMint"
  : "Create & Manage Tokens on Solana | NoFaceMint"; // Shortened title
---

<!doctype html>
<html lang="en">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z732KG1X6W"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-Z732KG1X6W");
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="NoFaceMint is a platform for creating, managing, and analyzing custom tokens on the Solana blockchain. Efficiently handle your tokens with our advanced tools."
      canonical={canonicalURL}
      twitter={{
        creator: "@yourtwitterhandle",
        site: "@yourtwitterhandle",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Create & Manage Tokens on Solana | NoFaceMint`, // Shortened title
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "NoFaceMint Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    
    <Navbar />
    <div id="banner" class="flex items-center max-md:flex-col gap-6 bg-gradient-to-tr from-blue-700 to-purple-400 text-white text-center px-6 py-3.5 rounded font-[sans-serif]">
      <p class="text-base flex-1 max-md:text-center">Don't miss out on our incredible offer! Get <strong>90% off</strong> on token creation for a limited time. Start minting your tokens today with NoFaceMint!</p>

      <div>
        <a href="/tokenForm" class="bg-white text-blue-500 py-2.5 px-5 rounded text-sm">
          Get Started
        </a>
        <svg xmlns="http://www.w3.org/2000/svg"
          id="cursor-pointer"
          class="w-3.5 cursor-pointer fill-white inline-block ml-4" viewBox="0 0 320.591 320.591">
          <path
            d="M30.391 318.583a30.37 30.37 0 0 1-21.56-7.288c-11.774-11.844-11.774-30.973 0-42.817L266.643 10.665c12.246-11.459 31.462-10.822 42.921 1.424 10.362 11.074 10.966 28.095 1.414 39.875L51.647 311.295a30.366 30.366 0 0 1-21.256 7.288z"
            data-original="#000000" />
          <path
            d="M287.9 318.583a30.37 30.37 0 0 1-21.257-8.806L8.83 51.963C-2.078 39.225-.595 20.055 12.143 9.146c11.369-9.736 28.136-9.736 39.504 0l259.331 257.813c12.243 11.462 12.876 30.679 1.414 42.922-.456.487-.927.958-1.414 1.414a30.368 30.368 0 0 1-23.078 7.288z"
            data-original="#000000" />
        </svg>
      </div>
      <script>
        const close = document.getElementById('cursor-pointer');
        close?.addEventListener('click', ()=>{
          document.getElementById('banner').classList.add('hidden');
        })
      </script>
    </div>
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
